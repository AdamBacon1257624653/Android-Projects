<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_pressed_color"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp" >

    <ImageView
        android:id="@+id/iv_myicon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/recentplay" />

    <TextView
        android:id="@+id/tv_mymusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_myicon"
        android:text="本地音乐"
        android:textColor="#ff000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_mymusic"
        android:textColor="#bb0a0a0a"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/mymusic_item_bracket"
        android:textColor="#bb0a0a0a"
        android:textSize="15sp" />

</RelativeLayout>