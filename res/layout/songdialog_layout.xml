<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_songname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="同桌的你" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_dialog_songname"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_dialog_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             >

            <ImageView
                android:id="@+id/iv_dialog_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/song_addto_favorite" />

            <TextView
                android:id="@+id/tv_dialog_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_dialog_favorite"
                android:text="收藏" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_dialog_ringtong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             >

            <ImageView
                android:id="@+id/iv_dialog_ringtong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/song_setto_ringtong" />

            <TextView
                android:id="@+id/tv_dialog_ringtong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_dialog_ringtong"
                android:text="铃声" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_dialog_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             >

            <ImageView
                android:id="@+id/iv_dialog_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/song_delete" />

            <TextView
                android:id="@+id/tv_dialog_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_dialog_delete"
                android:text="删除" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/song_addto_cancel"
        android:text="取消" />

</RelativeLayout>