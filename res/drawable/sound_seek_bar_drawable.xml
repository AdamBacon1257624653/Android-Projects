<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@android:id/background"
        android:drawable="@color/darker_gray">
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="rectangle"
                android:thickness="3dp" >
                <corners
                    android:bottomLeftRadius="1.5dp"
                    android:bottomRightRadius="1.5dp"
                    android:topLeftRadius="1.5dp"
                    android:topRightRadius="1.5dp" />

                <solid android:color="#FF00B4FF" />
            </shape>
        </clip>
    </item>

</layer-list>